<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div class="cards">
        <% @flats.each do |flat| %>
          <div class="card">
            <div class= "card-body">
              <div class="card-description">
                <h2><%= flat.name %></h2>
                <p><%= flat.address %></p>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to "More info", flat %>
              <%= link_to "Edit flat", edit_flat_path(flat.id) %>
              <%= link_to "Delete ", flat_path(flat), method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


